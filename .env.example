# Exemplo de arquivo .env para o bot de arbitragem

# Chave privada da carteira MetaMask (nunca compartilhe a chave real)
PRIVATE_KEY=your_metamask_private_key_here

# Token do bot do Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID do chat do Telegram para envio das mensagens
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Configurações gerais
MODE=simulation  # simulation ou real
OPERATION_INTERVAL=240  # Intervalo em segundos entre operações (ex: 240 = 4 minutos)
AUTO_RESTART_INTERVAL=43200  # Intervalo em segundos para auto-reinício (ex: 43200 = 12 horas)

# Endereços dos contratos dos DEXs confiáveis na Polygon (exemplo)
DEX_CONTRACTS=0xUniswapAddress,0xSushiswapAddress

# Outros parâmetros conforme necessidade
